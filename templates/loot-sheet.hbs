<form class="{{cssClass}}" autocomplete="off">
    <!-- Notes for later
    https://foundryvtt.com/api/HandlebarsHelpers.html
    -->
    <table class="simple-loot-sheet-table items-list item-list inventory-list {{css}}">
        <tr>
            <th>{{localize 'simplelootsheet.item'}}</th>
            <th>{{localize 'simplelootsheet.need'}}</th>
            <th>{{localize 'simplelootsheet.greed'}}</th>
            <th>{{localize 'simplelootsheet.pass'}}</th>
        </tr>

        {{log 'loot-sheet.hbs .'}}
        {{log .}}

        {{#each claims }}
            {{log 'claim'}} {{log .}}
            <tr class="item" data-item-uuid="{{uuid}}">
                <td class="item-name flexrow">
                    <div class="item-image" aria-label="{{name}}" style="background-image: url('{{img}}')"></div>
                    <!-- <img class="item-image" src="{{img}}" crossorigin="anonymous"/> -->
                    <!-- {{uuid}}++{{name}} -->
                    &nbsp;
                    <div>
                        {{name~}}
                        {{~#if isStack}} ({{quantity}}){{/if}}
                    </div>
                </td>

                <td class="player-claims" data-claim-type="need">
                    {{> claim needs }}
                </td>

                <td class="player-claims" data-claim-type="greed">
                    {{> claim greeds }}
                </td>

                <td class="player-claims" data-claim-type="pass">
                    <div></div>
                </td>
            </tr>
        {{/each}}

    </table>
</form>
