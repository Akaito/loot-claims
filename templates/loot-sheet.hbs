<form class="{{cssClass}} simple-loot-sheet-app" autocomplete="off">
    <!-- Notes for later
    https://foundryvtt.com/api/HandlebarsHelpers.html
    -->

    {{#if isGM}}
    <div class="gm-header">
        <button class="reset-loot">{{localize 'simple-loot-sheet-fvtt.resetLoot'}}</button>
        <!--
        <select name="data.flags.simple-loot-sheet-fvtt" title="((loot table))">
        </select>
        -->
        {{#if lootTable}}
            <button class="add-loot-table" data-roll-table-uuid="{{lootTable.uuid}}">{{localize 'simple-loot-sheet-fvtt.addLootTable'}}</button>
        {{else}}
            <button disabled><s>{{localize 'simple-loot-sheet-fvtt.addLootTable'}}</s>&nbsp;({{localize 'simple-loot-sheet-fvtt.noneFound'}})</button>
        {{/if}}
        <button class="give-permissions">{{localize 'simple-loot-sheet-fvtt.givePermissions'}}</button>
        <button class="distribute-loot">{{localize 'simple-loot-sheet-fvtt.distributeLoot'}}</button>
    </div>
    {{/if}}

    <table class="simple-loot-sheet-table items-list item-list inventory-list {{css}}">
        <tr>
            <th>{{localize 'simple-loot-sheet-fvtt.item'}}</th>
            <th>{{localize 'simple-loot-sheet-fvtt.need'}}</th>
            <th>{{localize 'simple-loot-sheet-fvtt.greed'}}</th>
            <!-- <th>{{localize 'simple-loot-sheet-fvtt.pass'}}</th> -->
        </tr>

        {{#each claims }}
            <tr class="item {{#if lootedBy}}looted{{/if}}" data-item-uuid="{{uuid}}">
                <td class="item-brief">
                    <!-- <div class="item-image" aria-label="{{name}}" style="background-image: url('{{img}}')"></div> -->
                        <img class="item-image" aria-label="{{name}}" src="{{img}}"></img>
                    <div class="item-name">
                        {{~name~}}
                        {{~#if quantity~}}&nbsp;({{~quantity~}}){{~/if~}}
                    </div>
                </td>

                <td class="player-claims" data-claim-type="need">
                    {{> claim needs }}
                </td>

                <td class="player-claims" data-claim-type="greed">
                    {{> claim greeds }}
                </td>

                <!--
                <td class="player-claims" data-claim-type="pass">
                    <div></div>
                </td>
                -->
            </tr>
        {{/each}}

    </table>
</form>
